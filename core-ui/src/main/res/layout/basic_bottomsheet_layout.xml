<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_sheet"
    android:paddingTop="24dp"
    android:paddingBottom="24dp">

    <ImageView
        android:id="@+id/iv_close"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="?android:selectableItemBackground"
        android:layout_marginHorizontal="24dp"
        app:srcCompat="@drawable/ic_close"/>

    <ImageView
        android:id="@+id/imageConfirmation"
        android:visibility="visible"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="24dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/img_error" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/plusjakarta_semibold"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="@string/title_error" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="24dp"
        android:layout_marginTop="6dp"
        android:paddingStart="24dp"
        android:fontFamily="@font/plusjakarta_regular"
        android:textColor="@color/grey"
        android:textSize="12sp"
        tools:text="error pada api music"/>

</LinearLayout>